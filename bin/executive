#!/usr/bin/env ruby

require "rubygems"
require "executive"

command = ARGV.first.downcase

case command
when "start"
  Executive.start
  Process.wait2

  trap "HUP" do
    Executive.restart
    Process.wait2
  end
when "deploy"
  Executive.deploy ARGV[1]
else
  puts "Usage: executive <command> <args>"
end


